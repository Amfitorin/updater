<Window x:Class="SBUpdater.Viev.AddAttributeGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddAttributeGroup" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding NewAttrGrName, UpdateSourceTrigger=PropertyChanged}" Margin="10" Padding="5"/>
        <Button Content="Сохранить" Grid.Row="2" Height="50" Width="100" VerticalAlignment="Bottom"  HorizontalAlignment="Right"  Command="{Binding SaveNewAttrGr}"/>
    </Grid>
</Window>
